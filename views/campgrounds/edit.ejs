<%- include('../partials/header') %>

<div class="container">
	
	<div class="row">
		
		<h1 style="text-align:center;">
			Edit  <%= camp.name %> Campground
		</h1>
		
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input type="text" name="camp[name]" value='<%= camp.name %>' class="form-control">	
				</div>
					
				<div class="form-group">
				 <!-- <input type="text" name="camp[image]" value="" class="form-control"> -->
				<input type="file" name="camp[image]" class="form-control"> 
				</div>
				
				<div class="form-group">
				<input type="number" name="camp[price]" value="<%= camp.price %>" class="form-control" min="0.01" step='0.01'>	
				</div>


				<div class="form-group">
					<textarea type="text" name="camp[description]" class="form-control"><%= camp.description %></textarea>
				</div>
				
				<div class="form-group">
					<input type="text" name="camp[location]" placeholder="location" class="form-control" value="<%= camp.location %>">
				</div>

				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block">	
				</div>
				
			</form>
			
			<a href="/campgrounds">Go back</a>
			
		</div>
		

		

	</div>
</div>
	
<%- include('../partials/footer') %>
