<%- include('./partials/header') %>


<div class="container">
	
	
	
	<h1 style="text-align:center;">
         Sign Up
	</h1>
      
		<div style="width: 30%; margin: 25px auto">
			
			<form action="/register" method="POST">

				<div class="form-group">
					<input type="text" name="register[username]" placeholder="username" class="form-control">	
				</div>

				<div class="form-group">
					<input type="password" name="password" placeholder="password" class="form-control"> 
				</div>

				<div class="form-group">
					<input type="text" name="register[firstName]" placeholder="First Name" class="form-control"> 
				</div>

				<div class="form-group">
          			<input type="text" name="register[lastName]" placeholder="Last Name" class="form-control"> 
        		</div>
				
				<div class="form-group">
		          <input type="text" name="register[avatar]" placeholder="avatar url" class="form-control"> 
        		</div>

				<div class="form-group">
		          <input type="String" name="adminCode" placeholder="adminCode" class="form-control"> 
        		</div>


				<div class="form-group">
					<input type="email" name="register[email]" placeholder="E-mail" class="form-control"> 
				</div>




				<button class=" btn btn-primary form-control">
					Sign Up
				</button>
			</form>

		</div>	
</div>	
	
<%- include('./partials/footer') %>