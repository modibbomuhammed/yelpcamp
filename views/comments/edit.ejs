<%- include('../partials/header') %>

<div class="container">
	
	<div class="row">
		
		<h1 style="text-align:center;">
			Edit Comments to <%= camp.name %>
		</h1>
		
		<div style="width:30%; margin: 25px auto;">
			<form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input type="text" name="comment[text]" value='<%= comment.text %>' class="form-control">	
				</div>
				
				<!-- <div class="form-group">
					<input type="text" name="comment[author]" placeholder="author" class="form-control">	
				</div> -->
				
				
				<div class="form-group">
					<input type="submit" class="btn btn-lg btn-primary btn-block">	
				</div>
				
			</form>
			
			<a href="/campgrounds">Go back</a>
			
		</div>
		

		

	</div>
</div>
	
<%- include('../partials/footer') %>